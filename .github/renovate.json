{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabledManagers": ["docker-compose"],
  "dependencyDashboard": true,
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "baseBranches": ["main"],
  "enabled": true,
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["immich-app/postgres/"],
      "enabled": false
    },
    {
      "matchPackageNames": ["/valkey/"],
      "enabled": false
    },
    {
      "matchPackageNames": ["ghcr.io/lukegus/termix"],
      "versioning": "regex:^release-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    },
    {
      "matchPackageNames": ["corentinth/it-tools, ghcr.io/wez/govee2mqtt"],
      "versioning": "regex:^(?<major>\\d{4})\\.(?<minor>\\d{2})\\.(?<patch>\\d{2})-[a-f0-9]+$"
    }
  ]
}
